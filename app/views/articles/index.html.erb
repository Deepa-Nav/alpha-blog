<h1>Showing Articles Listing Page</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Action</th>
        </tr>

    </thead>
    <tbody>
        <% @article.each do |article| %>
            <tr>
                <td>
                    <%= article.title %>
                </td>
                <td>
                    <%= article.description %>
                </td>
                <td>
                    <%= link_to 'Show' , article_path(article.id) %>
                </td>
                <td>
                    <%= link_to 'Edit' , edit_article_path(article.id) %>
                </td>
                <td>
                    <%= link_to "Destroy" , article_path(article.id), data: { turbo_method: :delete,
                        turbo_confirm: "Are you sure?" } %>
                </td>
            </tr>
            <%end%>
    </tbody>
</table>
<p>
    <%= link_to 'Create a new Article' , new_article_path %>
</p>