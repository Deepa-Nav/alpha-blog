<h1>Showing Articles Listing Page</h1>
<table>
    <thead>
        <tr>
            <th>User</th>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Action</th>
        </tr>

    </thead>
    <tbody>
        <% @article.each do |article| %>
            <tr>
                <td>
                    <%= article.user.username if article.user%>
                </td>
                <td>
                    <%= article.title %>
                </td>
                <td>
                    <%= article.description %>
                </td>
                <td>
                    <%= link_to 'View' , article_path(article.id) %>
                </td>
                <td>
                    <%= link_to 'Edit' , edit_article_path(article.id) %>
                </td>
                <td>
                    <%= link_to 'Delete' , article_path(article.id), method: :delete, data: {confirm: "Are you sure?" }
                        %>
                </td>
            </tr>
            <%end%>
    </tbody>
</table>
<p>
    <%= link_to 'Create a new Article' , new_article_path %>
</p>